import pandas as pd
import numpy as np
df = pd.read_csv("grocery_bill.csv")
print("Items Purchased:\n")
print(df)
df["total_item_cost"] = df["price"] * df["quantity"]
subtotal = np.sum(df["total_item_cost"])
discount_rate = 10 / 100   # 10%
tax_rate = 5 / 100         # 5%
discount_amount = subtotal * discount_rate
after_discount = subtotal - discount_amount
tax_amount = after_discount * tax_rate
final_total = after_discount + tax_amount
print("\nCost Details:\n")
print(df)
print("\nSubtotal:", subtotal)
print("Discount (10%):", discount_amount)
print("Tax (5%):", tax_amount)
print("Final Total Cost:", final_total)
