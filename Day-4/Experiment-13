from collections import Counter
with open("sample_text.txt", "r") as file:
    text = file.read().lower()
for ch in ".,!?":
    text = text.replace(ch, "")
words = text.split()
word_freq = Counter(words)
print("Word Frequency Distribution:\n")
for word, freq in word_freq.items():
    print(word, ":", freq)
