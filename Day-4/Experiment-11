import pandas as pd
import matplotlib.pyplot as plt
data = pd.read_csv("monthly_product_sales.csv")
plt.plot(data["day"], data["sales"], marker='o')
plt.title("Daily Product Sales")
plt.xlabel("Day of Month")
plt.ylabel("Sales")
plt.grid(True)
plt.show()
plt.scatter(data["day"], data["sales"])
plt.title("Daily Product Sales Scatter")
plt.xlabel("Day of Month")
plt.ylabel("Sales")
plt.show()
plt.bar(data["day"], data["sales"])
plt.title("Daily Product Sales Bar Chart")
plt.xlabel("Day of Month")
plt.ylabel("Sales")
plt.show()
